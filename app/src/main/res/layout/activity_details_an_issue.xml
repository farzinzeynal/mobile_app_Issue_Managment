<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsAnIssue">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="678dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/textView_issue_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/background_dark"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView_issue_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/background_dark"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/background_dark"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/background_dark"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/background_dark"
            android:textSize="19sp" />


        <TextView
            android:id="@+id/textView_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/background_dark"
            android:textSize="19sp" />

        <Button
            android:id="@+id/button_delete_issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tapşırığı sil" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>